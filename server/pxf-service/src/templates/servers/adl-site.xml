<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- To configure Azure Data Lake please refer to the following link
         https://hadoop.apache.org/docs/current/hadoop-azure-datalake/index.html
         for additional information -->
    <property>
        <name>fs.adl.oauth2.access.token.provider.type</name>
        <value>ClientCredential</value>
    </property>
    <property>
        <name>fs.adl.oauth2.refresh.url</name>
        <value>YOUR_ADL_REFRESH_URL</value>
    </property>
    <property>
        <name>fs.adl.oauth2.client.id</name>
        <value>YOUR_ADL_CLIENT_ID</value>
    </property>
    <property>
        <name>fs.adl.oauth2.credential</name>
        <value>YOUR_ADL_CREDENTIAL</value>
    </property>
</configuration>
